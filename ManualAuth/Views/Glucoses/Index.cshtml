@model IEnumerable<ManualAuth.Models.Glucose>

@{
    ViewData["Title"] = "Index";
}

<h1>
    Glucose level
</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Date and time 
            </th>
            <th>
                Glucose level
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) { // Show date, time and value of measurement
        <tr>
            <td>
                @item.GlucoseDateTime.ToString("f") 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GlucoseValue)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
