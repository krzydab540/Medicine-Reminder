@model ManualAuth.Models.Medicine

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit record</h1>

<h5>Medicine</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                Patient
                <input asp-for="Id_patient" class="form-control" />
                <span asp-validation-for="Id_patient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Day" class="control-label"></label>
                <input asp-for="Day" class="form-control" />
                <span asp-validation-for="Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                Time: hours
                <input asp-for="HourOfTaking" class="form-control" />
                <span asp-validation-for="HourOfTaking" class="text-danger"></span>
            </div>
            <div class="form-group">
                Time: minutes
                <input asp-for="MinuteOfTaking" class="form-control" />
                <span asp-validation-for="MinuteOfTaking" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
